#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'irb'
require 'reline_pac'

RelinePac.configure do |config|
  # default keybindings
  RelinePac::Packages::DEFAULT_KEYBINDS.each do |key, method|
    config.add_keybind(key, method)
  end
end

ARGV << '-f'
IRB.start(__FILE__)
